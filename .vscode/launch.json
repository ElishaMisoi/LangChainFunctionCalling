{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Uvicorn (app.main)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "jinja": true,
      "envFile": "${workspaceFolder}\\.env",
      "console": "integratedTerminal",
      "preLaunchTask": "Create venv and install requirements",
      "postDebugTask": "Notify: Deactivate venv"
    }
  ]
}
